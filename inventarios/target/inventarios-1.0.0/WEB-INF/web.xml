<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<!-- ConfiguraciÃ³n del servlet de Jersey -->
	<servlet>
		<servlet-name>MiServlet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<!-- Paquete donde se encuentran los recursos REST -->
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.krakedev.inventarios.servicios</param-value>
		</init-param>
		<!-- Habilitar el seguimiento de logs para debugging (opcional) -->
		<init-param>
			<param-name>jersey.config.server.tracing</param-name>
			<param-value>ALL</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Mapeo del servlet de Jersey a la URL /rest/* -->
	<servlet-mapping>
		<servlet-name>MiServlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>
			30
		</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
